<?xml version="1.0"?>


<robot name="iris_vl53l1x_lidars">

  <material name="orange">
    <color rgba="1.0 0.5 0.2 1" />
  </material>
  <material name="gray">
    <color rgba="0.2 0.2 0.2 1" />
  </material>


  <!-- base_link is the main link of the drone -->
  <link name="base_link" />

  <!-- Adding imu  -->
  <link name="imu_link" />

  <joint name="imu_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0 0 0" rpy="0 -0 0" />
  </joint>


  <!-- Adding lidars -->
  <link name="laser_bottom">
      <visual>
        <origin xyz="0.0 0.0 0.0" />
        <geometry>
          <box size="0.01 0.01 0.01" />
        </geometry>
        <material name="orange" />
      </visual>
  </link>

  <joint name="laser_bottom_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser_bottom" />
    <origin xyz="0 0 -0.1" rpy="0 0 0" />
  </joint>


  <link name="laser_top">
      <visual>
        <origin xyz="0.0 0.0 0.0" />
        <geometry>
          <box size="0.01 0.01 0.01" />
        </geometry>
        <material name="orange" />
      </visual>
  </link>

  <joint name="laser_top_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser_top" />
    <origin xyz="0 0 0.1" rpy="0 0 0" />
  </joint>

</robot>
